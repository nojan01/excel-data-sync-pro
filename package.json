{
  "name": "excel-data-sync-pro",
  "version": "1.1.02",
  "description": "Excel Data Sync Pro - Daten zwischen Excel-Dateien synchronisieren",
  "main": "main.js",
  "license": "MIT",
  "scripts": {
    "start": "electron --max-old-space-size=16384 --expose-gc .",
    "dev": "electron --max-old-space-size=16384 --expose-gc . --dev",
    "build": "electron-builder --win portable --x64",
    "build:mac": "electron-builder --mac",
    "build:mac-arm": "electron-builder --mac --arm64",
    "build:win": "electron-builder --win portable --x64",
    "build:arm64": "electron-builder --win portable --arm64",
    "build:all": "electron-builder --win --mac",
    "build:installer": "electron-builder --win nsis --x64"
  },
  "build": {
    "appId": "de.excelsync.pro",
    "productName": "Excel Data Sync Pro",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "exceljs-reader.js",
      "exceljs-writer.js",
      "src/**/*",
      "python/**/*",
      "node_modules/**/*"
    ],
    "asarUnpack": [
      "python/**"
    ],
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "assets/icon.icns",
      "category": "public.app-category.productivity",
      "identity": null,
      "hardenedRuntime": false,
      "gatekeeperAssess": false
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "window": {
        "width": 540,
        "height": 380
      }
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "installerHeaderIcon": "assets/icon.ico",
      "artifactName": "Excel-Data-Sync-Pro-${version}-Setup.exe",
      "shortcutName": "Excel Data Sync Pro",
      "perMachine": false,
      "runAfterFinish": false
    },
    "portable": {
      "artifactName": "Excel-Data-Sync-Pro-${arch}.exe"
    }
  },
  "author": "Norbert Jander",
  "devDependencies": {
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "electron-reload": "^2.0.0-alpha.1",
    "eslint": "^9.39.2"
  },
  "dependencies": {
    "adm-zip": "^0.5.16",
    "exceljs": "^4.4.0",
    "xlsx-populate": "^1.21.0"
  }
}
